<!-- Body -->

<div class="row">
  <% @course.each do |course| %>
  <div class="card" id="cohort-course-card" style="width: 14rem;">
  <div class="card-body">
    <h5 class="card-title"><%= course.name %></h5>
    <!-- <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> -->
     <p class="card-text">Total Hours: <%= course.total_hrs %></p>
    <a href="/courses/<%= course.id %>/edit" class="card-link">Edit</a>
  </div>
</div>

<% end %>
</div>